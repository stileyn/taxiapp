<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--============================================================
        car
    =============================================================-->
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.car.driver.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllCarDrivers</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.car.driver.GetAllCarDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCarDrivers</servlet-name>
        <url-pattern>/cars/drivers/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeDriverFromCar</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.car.driver.RemoveDriverFromCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeDriverFromCar</servlet-name>
        <url-pattern>/cars/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.car.CreateCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.car.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/cars/delete/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllCars</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.car.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getCarById</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.car.GetCarByIdController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCarById</servlet-name>
        <url-pattern>/cars/*</url-pattern>
    </servlet-mapping>

    <!--============================================================
        driver
    =============================================================-->
    <servlet>
        <servlet-name>createDriver</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.driver.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.driver.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/drivers/delete/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getMyCurrentCars</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.driver.GetMyCurrentCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getMyCurrentCars</servlet-name>
        <url-pattern>/drivers/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.driver.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getDriverById</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.driver.GetDriverByIdController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getDriverById</servlet-name>
        <url-pattern>/drivers/*</url-pattern>
    </servlet-mapping>

    <!--============================================================
        manufacturer
    =============================================================-->
    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.manufacturer.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.manufacturer.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturers/delete/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllManufacturers</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.manufacturer.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllManufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getManufacturerById</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.manufacturer.GetManufacturerByIdController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getManufacturerById</servlet-name>
        <url-pattern>/manufacturers/*</url-pattern>
    </servlet-mapping>

    <!--============================================================
        index
    =============================================================-->
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <!--============================================================
        login
    =============================================================-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--============================================================
        logout
    =============================================================-->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!--============================================================
        register
    =============================================================-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>ru.stileyn.taxi.controller.driver.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--============================================================
        Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/views/errorPage.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/errorPage.jsp</location>
    </error-page>

    <!--============================================================
        Filters
    =============================================================-->
        <filter>
            <filter-name>authenticationFilter</filter-name>
            <filter-class>ru.stileyn.taxi.filter.AuthenticationFilter</filter-class>
        </filter>
        <filter-mapping>
            <filter-name>authenticationFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>
</web-app>
